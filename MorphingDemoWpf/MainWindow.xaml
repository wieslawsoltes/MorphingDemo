      <Path Name="path" Stroke="Black" StrokeThickness="0" Fill="Red"/>
      <!-- <Path Name="path" Stroke="Black" StrokeThickness="1" Fill="Transparent"/> -->
    </Viewbox>
  </DockPanel>
</Window>
